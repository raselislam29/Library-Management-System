<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Tooltip?>

<BorderPane fx:id="root"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lms.lmsfinal.UserShellController"
            prefWidth="1200.0" prefHeight="760.0"
            styleClass="scene-root">

    <!-- Top bar -->
    <top>
        <HBox spacing="12" styleClass="bar">
            <padding>
                <Insets top="10" right="18" bottom="10" left="18"/>
            </padding>
            <Text text="User"
                  style="-fx-fill:white; -fx-font-weight:bold; -fx-font-size:18;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="clockLabel" style="-fx-text-fill:#ffffff;"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="welcomeLabel"
                   style="-fx-text-fill:#ffffff; -fx-font-weight:bold;"/>
            <Button text="Settings" onAction="#showProfile" styleClass="button ghost"/>
            <Button text="Logout" onAction="#onLogout" styleClass="button danger"/>
        </HBox>
    </top>

    <!-- Left navigation -->
    <left>
        <VBox spacing="10" styleClass="nav-pane" prefWidth="72">
            <padding>
                <Insets top="16" bottom="16" left="12" right="12"/>
            </padding>

            <Button text="ðŸ " onAction="#showHome"
                    maxWidth="Infinity" styleClass="button nav">
                <tooltip><Tooltip text="Home"/></tooltip>
            </Button>

            <Button text="ðŸ“š" onAction="#showBrowse"
                    maxWidth="Infinity" styleClass="button nav">
                <tooltip><Tooltip text="Browse Catalog"/></tooltip>
            </Button>

            <Button text="ðŸ“" onAction="#showBorrows"
                    maxWidth="Infinity" styleClass="button nav">
                <tooltip><Tooltip text="My Borrows"/></tooltip>
            </Button>

            <!-- NEW PROFILE BUTTON -->
            <Button text="ðŸ‘¤" onAction="#showProfile"
                    maxWidth="Infinity" styleClass="button nav">
                <tooltip><Tooltip text="Profile Settings"/></tooltip>
            </Button>

        </VBox>
    </left>

    <!-- Center area -->
    <center>
        <StackPane fx:id="contentHost"
                   styleClass="content-host">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
        </StackPane>
    </center>
</BorderPane>
