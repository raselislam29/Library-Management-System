<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lms.lmsfinal.BorrowFormController"
            prefWidth="420.0" prefHeight="320.0">
    <content>
        <VBox spacing="10">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <Label text="Borrower Information" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
            <TextField fx:id="nameField" promptText="Full Name"/>
            <TextField fx:id="studentIdField" promptText="Student ID"/>
            <TextField fx:id="phoneField" promptText="Phone Number"/>
            <TextField fx:id="emailField" promptText="Student Email"/>
            <Label fx:id="errLabel" textFill="red"/>

        </VBox>
    </content>
    <buttonTypes>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
        <ButtonType text="Submit" buttonData="OK_DONE"/>
    </buttonTypes>
</DialogPane>
