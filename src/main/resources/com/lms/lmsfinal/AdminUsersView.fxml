<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lms.lmsfinal.AdminUsersController"
            prefWidth="900.0" prefHeight="650.0"
            styleClass="root-dark">

    <top>
        <HBox spacing="10" styleClass="header">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
            <Label text="Manage Users" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#onBack" styleClass="btn-danger"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="12" styleClass="card">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
            <TableView fx:id="usersTable">
                <columns>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="340"/>
                    <TableColumn fx:id="colRole" text="Role" prefWidth="160"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10" styleClass="card">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="16"/>
                    <ColumnConstraints percentWidth="34"/>
                    <ColumnConstraints percentWidth="16"/>
                    <ColumnConstraints percentWidth="34"/>
                </columnConstraints>

                <Label text="Email"/>
                <TextField fx:id="tfEmail" GridPane.columnIndex="1"/>

                <Label text="Role" GridPane.columnIndex="2"/>
                <ChoiceBox fx:id="cbRole" GridPane.columnIndex="3"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Set Role" onAction="#onSetRole" styleClass="btn-primary"/>
                <Button text="Refresh" onAction="#onRefresh" styleClass="btn-secondary"/>
                <Label fx:id="statusLabel" textFill="#9ca3af"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
