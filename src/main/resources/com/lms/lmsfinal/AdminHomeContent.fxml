<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="12"
      style="-fx-background-color:#111827; -fx-background-radius:12;"
      maxWidth="680">
    <padding><Insets top="32" right="32" bottom="32" left="32"/></padding>

    <Label text="Welcome to the Admin Dashboard"
           style="-fx-text-fill:white; -fx-font-size:22; -fx-font-weight:bold;"/>
    <Label text="Use the left navigation to manage books and users."
           style="-fx-text-fill:#9ca3af; -fx-font-size:14;"/>
</VBox>
